    "definitions": {
        "model.SharedWish": {
            "description": "用户分享到社区的心愿信息",
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
                    "example": "2024-01-10T15:04:05Z"
                },
                "deleted_at": {
                    "type": "string",
                    "example": "2024-01-10T15:04:05Z"
                },
                "description": {
                    "type": "string",
                    "example": "想去看看世界的每个角落"
                },
                "event": {
                    "type": "string",
                    "example": "环游世界"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "original_wish_id": {
                    "type": "integer",
                    "example": 1
                },
                "shared_by_user_id": {
                    "type": "integer",
                    "example": 1
                },
                "updated_at": {
                    "type": "string",
                    "example": "2024-01-10T15:04:05Z"
                }
            }
        },
        "model.Task": {
            "description": "Task model represents a todo item in the system",
            "type": "object",
            "properties": {
                "completed": {
                    "description": "Completed indicates if the task is done",
                    "type": "boolean",
                    "example": false
                },
                "completed_date": {
                    "description": "CompletedDate records when the task was completed",
                    "type": "string",
                    "example": "2025-01-10T15:04:05Z"
                },
                "createdAt": {
                    "type": "string"
                },
                "deletedAt": {
                    "type": "string"
                },
                "description": {
                    "description": "Description provides additional details about the task",
                    "type": "string",
                    "example": "Milk, eggs, bread"
                },
                "event": {
                    "description": "Event is the main task description",
                    "type": "string",
                    "example": "Buy groceries"
                },
                "id": {
                    "type": "integer"
                },
                "importance_level": {
                    "description": "ImportanceLevel indicates task priority (0-5)",
                    "type": "integer",
                    "example": 3
                },
                "is_cycle": {
                    "description": "IsCycle indicates if the task is recurring",
                    "type": "boolean",
                    "example": false
                },
                "updatedAt": {
                    "type": "string"
                },
                "user_id": {
                    "description": "UserID is the owner of the task",
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "model.Wish": {
            "description": "用户的心愿信息",
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
